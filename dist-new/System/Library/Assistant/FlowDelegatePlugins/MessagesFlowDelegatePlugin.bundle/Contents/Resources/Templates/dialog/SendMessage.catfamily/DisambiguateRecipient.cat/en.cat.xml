<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<cat xmlns="urn:apple:names:siri:cat:1.5" id="SendMessage#DisambiguateRecipient" locale="en">
    
    <phrases >
        <first phrase="multiuserGrounding" note="This will never be printed, it is only used on HomePod.">
            <text><opt>OK, <var name="user.groundingIfNeeded"/>, </opt></text>
        </first>
    </phrases>
    
    <first>
        <dialog condition="deviceState.isHomePod">
            Which one?
        </dialog>
        
        <first condition="recipientsAreEqual" note="disambiguating handles (Home vs Work) and not recipient">
            <dialog condition="isAllHandlePhoneNumber"><opt><phrase name="multiuserGrounding"/></opt>Which phone number for <var name="recipients[0].fullName"/>?</dialog>
            <dialog><opt><phrase name="multiuserGrounding"/></opt>Which of these should I use for <var name="recipients[0].fullName"/>?</dialog>
        </first>
        
        <dialog condition="allRecipientsSameFirstName" note="Different recipients since sameRecipients is false">
            <opt><phrase name="multiuserGrounding"/></opt>Which <var name="recipients[0].givenName"/>?
        </dialog>
        
        <dialog note="Disambiguating recipient and they have different first name">
            <opt><phrase name="multiuserGrounding"/></opt>Which one?
        </dialog>
    </first>
</cat>
