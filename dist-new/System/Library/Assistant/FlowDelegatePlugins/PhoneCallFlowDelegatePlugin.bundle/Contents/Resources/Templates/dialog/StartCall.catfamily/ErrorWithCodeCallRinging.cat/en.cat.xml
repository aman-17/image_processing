<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<cat xmlns="urn:apple:names:siri:cat:1.0" locale="en">
    <phrases>
        <first phrase="deviceName">
            <text condition="device.isHomePod">HomePod</text>
            <text condition="device.isWatch">Apple Watch</text>
            <text condition="device.isMac">Mac</text>
            <text note="This will be 'iPhone' or 'iPad' or 'iPod'"><var name="device.deviceName"/></text>
        </first>
    </phrases>
    <first>
      <dialog condition="device.isHomePod">Sorry, <var name="user.groundingIfNeeded"/>, I can’t make a call while your phone’s ringing.</dialog>
      <dialog condition="device.isHomePod">I can’t call right now - the iOS device associated with this HomePod is ringing.</dialog>
      <dialog>Hmm, your <phrase name="deviceName"/> is currently ringing.</dialog>
      <dialog>Hmm, your personal device is currently ringing.</dialog>
    </first>
</cat>
