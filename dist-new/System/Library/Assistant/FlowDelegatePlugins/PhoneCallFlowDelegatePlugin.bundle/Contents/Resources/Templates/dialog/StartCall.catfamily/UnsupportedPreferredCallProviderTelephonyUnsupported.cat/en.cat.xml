<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<cat xmlns="urn:apple:names:siri:cat:1.0" locale="en">
    <conditions>
        <condition name="isWatchOrMac">
            <or>
                <expression name="device.isWatch"/>
                <expression name="device.isMac"/>
            </or>
        </condition>
    </conditions>
    <phrases>
        <first phrase="deviceName">
            <text condition="device.isHomePod">HomePod</text>
            <text condition="device.isWatch">Apple Watch</text>
            <text condition="device.isMac">Mac</text>
            <text note="This will be 'iPhone' or 'iPad' or 'iPod'"><var name="device.deviceName"/></text>
        </first>
    </phrases>
    <first>
        <first condition="isWatchOrMac">
            <dialog id="Watch" condition="device.isWatch">Sorry, I’m not able to make a phone call at this time, but you can ask me to place a FaceTime Audio call.</dialog>
            <dialog id="Mac">Sorry, I’m not able to make a phone call at this time, but you can ask me to place a FaceTime call.</dialog>
        </first>
        <dialog id="WithDevice">Sorry, I can’t make a phone call with your <phrase name="deviceName"/>.</dialog>
        <dialog id="Generic">Sorry, I can’t make a phone call here.</dialog>
    </first>
</cat>
