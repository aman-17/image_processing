<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<cat xmlns="urn:apple:names:siri:cat:1.0" id="PlayMediaIntent#PlayPodcast" locale="en">
    <conditions>
       <condition name="attributionWithFallbackUsername" note="attribution required with a fallback user">
           <and>
               <expression name="isAppAttributionRequired"/>
               <expression name="fallbackUsername" op="nonempty"/>
           </and>
       </condition>
       <condition name="attributionWithDialogMemory" note="attribution required using dialog memory">
           <and>
               <expression name="isAppAttributionRequired"/>
               <expression name="useDialogMemoryForAppAttribution"/>
           </and>
       </condition>
       <condition name="appSpecifiedOrAttributionRequired">
           <or>
               <expression name="isAppAttributionRequired"/>
               <expression name="isAppSpecified"/>
           </or>
       </condition>
       <condition name="isEpisode">
           <expression name="mediaType" op="eq" value="'PODCAST_EPISODE'"/>
       </condition>
       <condition name="isStation">
           <expression name="mediaType" op="eq" value="'PODCAST_STATION'"/>
       </condition>
      <condition name="isNewestEpisode">
        <and>
            <expression name="isNewest"/>
            <expression name="mediaType" op="eq" value="'PODCAST_EPISODE'"/>
        </and>
      </condition>
      <condition name="podcastMentionsPodcast">
          <or>
              <expression name="title" op="contains" value="'podcast'"/>
              <expression name="title" op="contains" value="'Podcast'"/>
          </or>
      </condition>
      <condition name="titleEmpty">
          <expression name="title" op="empty"/>
      </condition>
      <condition name="areSpeakerNamesPresent">
          <or>
              <expression name="wha.firstSpeakerName"/>
              <expression name="wha.secondSpeakerName"/>
          </or>
      </condition>
      <condition name="areSpeakerRoomsPresent">
          <or>
              <expression name="wha.firstSpeakerRoom"/>
              <expression name="wha.secondSpeakerRoom"/>
          </or>
      </condition>
      <condition name="areBothPermanentNamesPresent">
          <and>
              <expression name="wha.firstPermanentNameFromSpokenEntities"/>
              <expression name="wha.secondPermanentNameFromSpokenEntities"/>
          </and>
      </condition>
      <condition name="isPermanentNameAndRoomNamePresent">
          <and>
              <expression name="wha.firstPermanentNameFromSpokenEntities"/>
              <expression name="wha.firstRoomNameFromSpokenEntities"/>
              <or>
                  <not>
                      <expression name="wha.secondPermanentNameFromSpokenEntities"/>
                  </not>
                  <expression name="wha.secondPermanentNameFromSpokenEntities" op="empty"/>
              </or>
          </and>
      </condition>
      <condition name="isOnlyFirstPermanentNamePresent">
          <and>
              <expression name="wha.firstPermanentNameFromSpokenEntities"/>
              <or>
                  <not>
                      <expression name="wha.secondPermanentNameFromSpokenEntities"/>
                  </not>
                  <expression name="wha.secondPermanentNameFromSpokenEntities" op="empty"/>
              </or>
              <or>
                  <not>
                      <expression name="wha.firstRoomNameFromSpokenEntities"/>
                  </not>
                  <expression name="wha.firstRoomNameFromSpokenEntities" op="empty"/>
              </or>
          </and>
      </condition>
    </conditions>
    <phrases>
        <first phrase="onAppSpecified">
            <text condition="attributionWithFallbackUsername"><opt> on <var name="fallbackUsername" inflect="genitive"/> <var name="app.localizedName"/></opt></text>
            <text condition="attributionWithDialogMemory"><opt> on <var name="app.localizedName" ground="OnceThisWeek"/></opt></text>
            <text condition="appSpecifiedOrAttributionRequired"><opt> on <var name="app.localizedName"/></opt></text>
            <text/>
        </first>
        <first phrase="sortOrder">
            <text condition="isOldest">, starting with the oldest episode</text>
            <text condition="isNewest">, starting with the newest episode</text>
        </first>
        <first phrase="podcastTitle">
            <text>‘<var name="title"/>’</text>
        </first>
        <first phrase="episodeTitle">
            <text>‘<var name="episodeTitle"/>’</text>
        </first>
        <first phrase="MUI" note="Multi User Introduction">
            <text condition="isGrounding">OK, <var name="user.groundingIfNeeded"/>, </text>
            <text></text>
        </first>
        <first phrase="okIntroduction">
            <text condition="isGrounding"><phrase name="MUI"/></text>
            <text>OK, </text>
        </first>
        <first phrase="definePodcast">
            <text condition="podcastMentionsPodcast"></text>
            <text>podcast </text>
        </first>
        <first phrase="groupsDialog">
            <text condition="areBothPermanentNamesPresent"> on the <var name="wha.firstPermanentNameFromSpokenEntities"/> and <var name="wha.secondPermanentNameFromSpokenEntities"/></text>
            <text condition="isPermanentNameAndRoomNamePresent"> on the <var name="wha.firstPermanentNameFromSpokenEntities"/> and in the <var name="wha.firstRoomNameFromSpokenEntities"/></text>
            <text condition="isOnlyFirstPermanentNamePresent"> on the <var name="wha.firstPermanentNameFromSpokenEntities"/></text>
            <text></text>
        </first>
        <first phrase="whaDialog">
            <text condition="wha.isAllSpeakers"> everywhere</text>
            <text condition="wha.hasThreeOrMoreRooms"> in multiple rooms</text>
            <text condition="wha.hasGroups"><phrase name="groupsDialog"/></text>
            <text condition="areSpeakerNamesPresent"> on the <var name="wha.firstSpeakerName"/><opt> and <var name="wha.secondSpeakerName"/></opt></text>
            <text condition="areSpeakerRoomsPresent"> in the <var name="wha.firstSpeakerRoom"/><opt> and <var name="wha.secondSpeakerRoom"/></opt></text>
            <text></text>
        </first>
    </phrases>
    <first>
        <dialog condition="isStation"><phrase name="MUI"/><transform mode="capitalizeSentence">now</transform> playing podcast station<phrase name="podcastTitle"/><phrase name="whaDialog"/>…</dialog>
        <dialog condition="titleEmpty"><phrase name="MUI"/><transform mode="capitalizeSentence">now</transform> playing <phrase name="episodeTitle"/><phrase name="whaDialog"/>…</dialog>
        <dialog condition="isNewestEpisode"><phrase name="okIntroduction"/>here’s the newest episode of <phrase name="podcastTitle"/>, <phrase name="episodeTitle"/><phrase name="whaDialog"/>…</dialog>
        <random condition="isEpisode">
            <dialog><phrase name="MUI"/><transform mode="capitalizeSentence">now</transform> playing <phrase name="episodeTitle"/> from <phrase name="podcastTitle"/><phrase name="whaDialog"/>…</dialog>
            <dialog><phrase name="okIntroduction"/>playing <phrase name="episodeTitle"/> from <phrase name="podcastTitle"/><phrase name="whaDialog"/>…</dialog>
        </random>
        <random>
            <dialog><phrase name="MUI"/><transform mode="capitalizeSentence">now</transform> playing <phrase name="definePodcast"/><phrase name="podcastTitle"/><opt><phrase name="sortOrder"/></opt><phrase name="onAppSpecified"/><phrase name="whaDialog"/>…</dialog>
            <dialog><phrase name="MUI"/><transform mode="capitalizeSentence">playing</transform> <phrase name="definePodcast"/><phrase name="podcastTitle"/><opt><phrase name="sortOrder"/></opt><phrase name="onAppSpecified"/><phrase name="whaDialog"/>…</dialog>
            <dialog><phrase name="MUI"/><transform mode="capitalizeSentence">here’s</transform> the <phrase name="definePodcast"/><phrase name="podcastTitle"/><opt><phrase name="sortOrder"/></opt><phrase name="onAppSpecified"/><phrase name="whaDialog"/>…</dialog>
            <dialog><phrase name="okIntroduction"/><phrase name="podcastTitle"/> <phrase name="definePodcast"/>now playing<opt><phrase name="sortOrder"/></opt><phrase name="onAppSpecified"/><phrase name="whaDialog"/>…</dialog>
            <dialog><phrase name="okIntroduction"/><phrase name="podcastTitle"/> <phrase name="definePodcast"/>coming up<opt><phrase name="sortOrder"/></opt><phrase name="onAppSpecified"/><phrase name="whaDialog"/>…</dialog>
        </random>
    </first>
</cat>
