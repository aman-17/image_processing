<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<cat xmlns="urn:apple:names:siri:cat:1.0" id="PlayMediaIntent#ConfirmPlaybackQueueLocation" locale="en">
    <conditions>
        <condition name="hasMediaItems">
          <expression name="mediaItemCount" op="ne" value="0"/>
        </condition>
        
        <condition name="artistNotEmpty">
            <not>
                <expression name="artist" op="empty"/>
            </not>
        </condition>
        <condition name="titleNotEmpty">
            <not>
                <expression name="title" op="empty"/>
            </not>
        </condition>
        
        <condition name="queueLocationNext">
            <expression name="queueLocation" op="eq" value="'NEXT'"/>
        </condition>
        <condition name="queueLocationLater">
            <expression name="queueLocation" op="eq" value="'LATER'"/>
        </condition>
    </conditions>
    <phrases>
        <first phrase="title">
            <text>
                <print>‘<var name="title"/>’</print>
                <speak><say-as interpret-as="music"><var name="title"/></say-as></speak>
            </text>
        </first>
        
        <first phrase="byArtist">
            <text condition="artistNotEmpty"><break time="0ms"/> by <say-as interpret-as="music"><var name="artist"/></say-as></text>
            <text/>
        </first>
        
        <first phrase="titleByArtist">
            <text condition="titleNotEmpty"><phrase name="title"/><phrase name="byArtist"/></text>
            <text condition="artistNotEmpty"><say-as interpret-as="music"><var name="artist"/></say-as></text>
            <text>that</text>
        </first>
        <first phrase="mediaItemToQueue">
            <text condition="hasMediaItems"><phrase name="titleByArtist"/></text>
            <text>that</text>
        </first>
    </phrases>
    <first>
      <dialog condition="queueLocationNext">Just to confirm, you wanted to play <phrase name="mediaItemToQueue"/> next, right?</dialog>
      <dialog condition="queueLocationLater">Just to confirm, you wanted to add <phrase name="mediaItemToQueue"/> to your queue on <var name="app.localizedName"/>, right?</dialog>
      <dialog>Just to confirm, you want to play <phrase name="mediaItemToQueue"/> now from <var name="app.localizedName"/>, right?</dialog>
    </first>
</cat>
